<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Style"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui">



    <!-- Kolory akcentów (neonowe / kontrastowe) -->
    <Color x:Key="AccentCyan">#00E5FF</Color>
    <Color x:Key="AccentGreen">#00FF9D</Color>
    <Color x:Key="AccentOrange">#FFB86B</Color>
    <Color x:Key="CardBg">#273446</Color>
    <Color x:Key="CardBgElevated">#273446</Color>
    <Color x:Key="MutedText">#9AA5B1</Color>
    <Color x:Key="Divider">#26313A</Color>


    <!-- Cienie -->
    <Shadow x:Key="CardShadow" Brush="#000" Opacity="0.25" Radius="8" Offset="0,4" />

    <!-- Styl dla kart -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBg}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 16"/>
        <Setter Property="Padding" Value="14"/>
        <Setter Property="Shadow" Value="{StaticResource CardShadow}"/>
        <Setter Property="Margin" Value="6"/>
    </Style>

    <Style x:Key="ElevatedCardBorderStyle" TargetType="Border" BasedOn="{StaticResource CardBorderStyle}">
        <Setter Property="Background" Value="{StaticResource CardBgElevated}"/>
    </Style>

    <!-- Nagłówki i tekst -->
    <Style x:Key="SectionTitle" TargetType="Label">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="#E6EEF2"/>
    </Style>

    <Style x:Key="CardTitle" TargetType="Label">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="#E6EEF2"/>
    </Style>

    <Style x:Key="CardValueLarge" TargetType="Label">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="#FFFFFF"/>
    </Style>

    <Style x:Key="CardValueSmall" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource MutedText}"/>
    </Style>

    <!-- Wykresy -->
    <Style TargetType="lvc:CartesianChart">
        <Setter Property="Background" Value="{StaticResource CardBgElevated}"/>
        <Setter Property="HeightRequest" Value="360"/>
        <Setter Property="WidthRequest" Value="700"/>
        <Setter Property="Margin" Value="8"/>
    </Style>

    <Style TargetType="lvc:PieChart">
        <Setter Property="Background" Value="{StaticResource CardBgElevated}"/>
        <Setter Property="HeightRequest" Value="360"/>
        <Setter Property="WidthRequest" Value="360"/>
        <Setter Property="Margin" Value="8"/>
    </Style>
    
</ResourceDictionary>